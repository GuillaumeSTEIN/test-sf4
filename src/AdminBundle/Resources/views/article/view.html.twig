{% extends 'base.html.twig' %}

{% block body %}
    <table class="ui celled table">
        <tr>
            <td class="right aligned">
                <b>Title</b>
            </td>
            <td>
                {{ article.title }}
            </td>
        </tr>
        <tr>
            <td class="right aligned">
                <b>Posted At</b>
            </td>
            <td>
                {{ article.postedAt|date }}
            </td>
        </tr>
        <tr>
            <td class="right aligned">
                <b>Description</b>
            </td>
            <td>
                {{ article.description|raw|nl2br }}
            </td>
        </tr>
    </table>
    <div class="ui buttons">
        <a class="ui primary icon button" href="{{ path('app_admin_article_index') }}">
            <i class="chevron left icon"></i>
        </a>
        <a class="ui yellow icon button" href="{{ path('app_admin_article_edit', {'id':article.id}) }}">
            <i class="edit icon"></i>
        </a>
        <a class="ui red icon button" href="{{ path('app_admin_article_remove', {'id':article.id}) }}">
            <i class="remove icon"></i>
        </a>
    </div>
{% endblock %}
